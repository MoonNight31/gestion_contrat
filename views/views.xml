<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Extension de la vue Ã‰tudiant pour ajouter les contrats -->
    <record id="view_etudiant_form_contrat" model="ir.ui.view">
        <field name="name">res.partner.form.etudiant.contrat</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="gestion_ecole.view_etudiant_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Contrats">
                    <field name="contrat_etudiant_ids">
                        <tree>
                            <field name="type_contrat"/>
                            <field name="entreprise_id"/>
                            <field name="personne_tuteur_id"/>
                            <field name="date_started"/>
                            <field name="date_ended"/>
                            <field name="duree_jours"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extension de la vue SalariÃ© pour ajouter les contrats de tutorat -->
    <record id="view_salarie_form_contrat" model="ir.ui.view">
        <field name="name">res.partner.form.salarie.contrat</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="gestion_entreprise.view_salarie_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Contrats de Tutorat">
                    <field name="contrat_tuteur_ids">
                        <tree>
                            <field name="type_contrat"/>
                            <field name="personne_etudiant_id"/>
                            <field name="entreprise_id"/>
                            <field name="date_started"/>
                            <field name="date_ended"/>
                            <field name="duree_jours"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extension de la vue Contact Entreprise pour ajouter les contrats et le compteur -->
    <record id="view_entreprise_tree_contrat" model="ir.ui.view">
        <field name="name">res.partner.tree.entreprise.contrat</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="gestion_entreprise.view_entreprise_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='salarie_count']" position="after">
                <field name="contrat_count"/>
            </xpath>
        </field>
    </record>

    <record id="view_entreprise_form_contrat" model="ir.ui.view">
        <field name="name">res.partner.form.entreprise.contrat</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="gestion_entreprise.view_entreprise_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='salarie_count']" position="after">
                <field name="contrat_count"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Contrats">
                    <field name="contrat_entreprise_ids">
                        <tree>
                            <field name="type_contrat"/>
                            <field name="personne_etudiant_id"/>
                            <field name="personne_tuteur_id"/>
                            <field name="date_started"/>
                            <field name="date_ended"/>
                            <field name="duree_jours"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Contrat Views -->
    <record id="view_contrat_tree" model="ir.ui.view">
        <field name="name">contrat.contrat.tree</field>
        <field name="model">contrat.contrat</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="type_contrat"/>
                <field name="personne_etudiant_id"/>
                <field name="entreprise_id"/>
                <field name="personne_tuteur_id"/>
                <field name="date_started"/>
                <field name="date_ended"/>
                <field name="duree_jours"/>
            </tree>
        </field>
    </record>

    <record id="view_contrat_form" model="ir.ui.view">
        <field name="name">contrat.contrat.form</field>
        <field name="model">contrat.contrat</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="type_contrat"/>
                            <field name="personne_etudiant_id"/>
                            <field name="formation_id" readonly="True"/>
                        </group>
                        <group>
                            <field name="date_started"/>
                            <field name="date_ended"/>
                            <field name="duree_jours" readonly="True"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="entreprise_id"/>
                            <field name="personne_tuteur_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_contrat" model="ir.actions.act_window">
        <field name="name">Contrats</field>
        <field name="res_model">contrat.contrat</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_contrat_root" 
              name="Gestion Contrat" 
              sequence="30" 
              web_icon="gestion_contrat,static/description/icon.png"/>

    <menuitem id="menu_contrat_list" 
              name="Tous les Contrats" 
              parent="menu_contrat_root" 
              action="action_contrat" 
              sequence="1"/>

  </data>
</odoo>
